doctype html
html(lang='en')
    head
        title #{title}
        link(rel="stylesheet", href="../css/styles.css", type="text/css")
        script(src="../js/standard_page_client.js", type="text/javascript")
    body
        div.module(id="m_-1")
            div.moduletitle
                h1.title #{title}
                span.editbutton(onclick="toggleModuleEditMode(this)") edit
            p.content #{description}

        if modules
            for section, index in modules
                div.module(id="m_"+index)
                    if section
                        div.moduletitle
                            h2.name #{section.name}
                            span.editbutton(onclick="toggleModuleEditMode(this)") edit
                            span.editbutton(onclick="deleteModule(this)") delete

                        p.content #{section.content}
                    else
                        p Section is a null value
            
        button(onclick="addNewModule()") Add Module
            